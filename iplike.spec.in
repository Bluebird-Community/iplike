%define rel @RPM_RELEASE@
%define version @VERSION@
%define pkgname @PACKAGE@

%define lt_release @LT_RELEASE@
%define lt_version @LT_CURRENT@.@LT_REVISION@.@LT_AGE@

Name: %{pkgname}
Version: %{version}
Release: %{rel}
License: GPL
Group: Applications/Databases
Summary: PostgreSQL complex IP Address text field query
Source: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-root

BuildRequires: postgresql-devel

%description
PostgreSQL function for doing complex IP address queries
on a text field.

%prep
%setup

%build
%configure
make

%install
%makeinstall

%clean
if [ "$RPM_BUILD_ROOT" != "/" ]; then
	rm -rf "$RPM_BUILD_ROOT"
fi

%files
%{_prefix}/lib/iplike*

